<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp">

        <EditText
            android:id="@+id/editTexBuscar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contorno"
            android:backgroundTint="#d6dbdf"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="BuscarProducto (L)"
            android:inputType="text"
            android:paddingLeft="40dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="15dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/card" />

    <TextView
        android:id="@+id/textDatosPago"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:text="Datos de mÃ©todo de Pago:"
        android:textColor="#566573 "
        android:textSize="21sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



    </androidx.cardview.widget.CardView>


</LinearLayout>