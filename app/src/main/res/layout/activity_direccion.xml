<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                app:srcCompat="@drawable/casita" />

            <TextView
                android:id="@+id/textDatosDireccion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="Datos de la Dirección:"
                android:textColor="#566573"
                android:textSize="19sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-14dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="28dp"

                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <EditText
                        android:id="@+id/txtCalle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/custom_editext_green"
                        android:editable="true"
                        android:ems="10"
                        android:hint="Calle / Jirón"
                        android:inputType="text"
                        android:paddingLeft="22dp"
                        android:textColor="#566573"
                        android:textColorHint="@color/cardview_dark_background"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/txtNumero"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/custom_editext_green"
                        android:ems="10"
                        android:hint="Número"
                        android:inputType="text"
                        android:paddingLeft="22dp"
                        android:textColor="#566573"
                        android:textColorHint="@color/cardview_dark_background"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/txtReferencia"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/custom_editext_green"
                        android:ems="10"
                        android:hint="Referencia"
                        android:inputType="text"
                        android:paddingLeft="22dp"
                        android:textColor="#566573"
                        android:textColorHint="@color/cardview_dark_background"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/txtInfoAdicional"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/custom_editext_green"
                        android:ems="10"
                        android:hint="Info. Adicional (Piso,Depto)"
                        android:inputType="text"
                        android:paddingLeft="22dp"
                        android:textColor="#566573"
                        android:textColorHint="@color/cardview_dark_background"
                        android:textSize="15dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSaveAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:backgroundTint="#5AA977"
                android:text="Guardar" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/footer"
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>