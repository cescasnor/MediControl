<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">


    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:srcCompat="@drawable/cat1" />

            <TextView
                android:id="@+id/textNombreCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angela del Pilar Castro Noriega"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/Direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/direcciones"
                android:textColor="#566573"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDirecciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_editext_green"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnDireccion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="80dp"
                android:backgroundTint="#f39c12"
                android:text="@string/añadir_direccion" />

            <TextView
                android:id="@+id/tvPagosTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="@string/metodos_pago"
                android:textColor="#566573"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPagos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="1dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_editext_green"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tvVisa1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visa: XXXXXXXXXXXX9302"
                            android:textColor="#2E2E2E"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/ivCard"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/boton_redondo"
                            android:contentDescription="@string/editar"
                            app:srcCompat="@drawable/lapiz" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvVisa2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visa: XXXXXXXXXXXX8210"
                            android:textColor="#2E2E2E"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/ivCard1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/boton_redondo"
                            android:contentDescription="@string/editar"
                            app:srcCompat="@drawable/lapiz" />

                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnAddPago"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="80dp"
                android:backgroundTint="#f39c12"
                android:text="@string/añadir_pago" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/footer"
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>